{
  "name": "koishi-plugin-manosaba-text-box",
  "description": "一个自动化表情包生成工具，能够快速生成带有自定义文本的魔法少女的魔女裁判文本框图片",
  "version": "1.0.6",
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "convert": "uv run convert_assets.py",
    "build": "yarn rolldown -c rolldown.config.js",
    "publish": "yarn npm publish",
    "lint": "biome check && biome lint",
    "lint-fix": "biome format --write && biome lint --write"
  },
  "license": "MPL-2.0",
  "homepage": "https://github.com/Hoshino-Yumetsuki/koishi-plugin-manosaba-text-box",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hoshino-Yumetsuki/koishi-plugin-manosaba-text-box"
  },
  "keywords": [
    "魔法少女的魔女审判",
    "koishi",
    "plugin",
    "galgame"
  ],
  "peerDependencies": {
    "koishi": "^4.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.2",
    "koishi": "^4.18.9",
    "rolldown": "1.0.0-beta.54",
    "rolldown-plugin-dts": "^0.18.3"
  },
  "koishi": {
    "description": {
      "zh": "一个自动化表情包生成工具，能够快速生成带有自定义文本的魔法少女的魔女裁判文本框图片"
    },
    "service": {
      "implements": [
        "manosaba"
      ]
    }
  },
  "dependencies": {
    "@resvg/resvg-wasm": "^2.6.2",
    "entities": "^7.0.0",
    "js-yaml": "^4.1.1",
    "wasm-vips": "^0.0.16"
  }
}
